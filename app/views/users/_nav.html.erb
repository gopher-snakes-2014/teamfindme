<nav>
  <div class="row">
    <div class="large-3 columns">
      <%= image_tag "logo.png", class: "logo" %>
    </div>
    <div class="large-9 columns">
      <ul class="button-group right">
        <% if session[:current_user_id] == nil %>
        <li><a href="#" class="nav-button button [tiny small large]" id="signUp" data-reveal-id="myModalUp">Sign Up</a></li>
        <li><a href="#" class="nav-button button [tiny small large]" id="signIn" data-reveal-id="myModalIn">Sign In</a></li>
        <% else %>
        <li><a href="#"><%= link_to :SignOut, sessions_path, :method => :delete, class: "nav-button button [tiny small large]" %></a></li>
        <li><a href="#"><%= link_to :Profile, users_path, :method => :get, class: "nav-button button [tiny small large]", id: "viewProfile"%></a></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
