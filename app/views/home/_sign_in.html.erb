<div id="myModalIn" class="reveal-modal" data-reveal>
 <%= form_for "session", remote: true, url: '/signin', :method=> :get, html: {class: "signin"} do |f|%>
    <%= f.label :username  %>
    <%= f.text_field :username, class: "form-control"  %>
    <br>
    <%= f.label :password  %>
    <%= f.password_field :password_digest, class: "form-control" %>
    <br>
    <%= f.submit "sign in", class: "submitButton" %>
    <% end %>
</div>