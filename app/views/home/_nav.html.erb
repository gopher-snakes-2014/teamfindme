<nav>
  <div class="row">
      <div class="large-3 columns">
        <%= image_tag "logo.png", class: "logo" %>
      </div>
    <div class="large-9 columns">
      <ul class="button-group right">
        <% if session[:current_user_id] == nil %>
        <li><a href="#" class="nav-button button [tiny small large]" id="signUp" data-reveal-id="myModalUp">Sign Up</a></li>
        <li><a href="#" class="nav-button button [tiny small large]" id="signIn" data-reveal-id="myModalIn">Sign In</a></li>
        <% else %>
        <li><a href="#" class="button [tiny small large]"><%= link_to 'Sign Out', sessions_path, :method => :delete %></a></li>
        <li><a href="#" class="button [tiny small large]" id="viewProfile">View Profile</a></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="row">
  <dl class="sub-nav">
    <div class="large-6 columns">
      <a href="#" class="sub-nav-button button expand" id="leaveANote">Leave a note</a>
    </div>
    <div class="large-6 columns">
      <a href="#" class="sub-nav-button button expand" data-reveal-id="myModalAll" id="seeAllNotes">Read all of the notes</a>
    </div>
  </dl>
</div>