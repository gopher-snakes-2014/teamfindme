<div id="myModalNote" class="reveal-modal" data-reveal>
 <%= form_for @note do |f|%>
    <%= f.label :note  %>
    <%= f.text_field :comment, class: "form-control"  %>
    <br>
    <%= f.label :image  %>
    <%= f.string :picture_path, class: "form-control" %>
    <br>
    <%= f.submit "sign in", class: "submitButton" %>
    <% end %>
    <a class="close-reveal-modal">&#215;</a>
</div>
